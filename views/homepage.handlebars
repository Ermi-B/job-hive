<div class="row d-flex mb-5">
  <div class="col-10 d-flex">
    <input id="tags" type="text" class="form-control col-5 mx-4 text-center font-italic" placeholder="Search for jobs" aria-label="Search" aria-describedby="search-button" />
    <button class="btn btn-primary" type="button" id="search-button">Search</button>
  </div>
</div>

<!-- Loop over each object in the projects array -->
{{#each paginatedJobs as |job|}}
<div class="row mb-4 p-4 project border rounded-4 shadow-sm">
  <a class="text-decoration-none" href="home/job/{{job.id}}">
    <div class="col-md-5">
      <h2>
        {{job.job_name}}
      </h2>
      <p>Job Listed by {{job.user.name}}</p>
    </div>

  </a>
  <div class="col-md-12">
    <p>
      {{job.job_description}}
    </p>
  </div>
</div>
{{/each}}

{{! pagination }}
<nav aria-label="Page navigation example" id="pagination-nav" data-totalPages={{totalPages}}
  data-currentPage={{currentPage}}>
  <ul class="pagination justify-content-center">
    {{! dyncamically pagenations are generated from /js.home.js }}
  </ul>
</nav>
{{!-- <p>total pages: {{totalPages}} current page:{{currentPage}} </p> --}}
<script src="/js/search.js"></script>
<script src="/js/home.js"></script>